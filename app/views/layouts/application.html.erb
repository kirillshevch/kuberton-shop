<!DOCTYPE html>
<html>
  <head>
    <title>KubertonShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'shared/header' %>

    <% flash.each do |key, value| %>
      <span><%= value %></span>
    <% end %>

    <%= yield %>
  </body>
</html>
